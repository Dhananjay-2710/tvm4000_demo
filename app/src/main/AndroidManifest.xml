<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.usb.host" android:required="true" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Final_Demo"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Final_Demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".usbdevicelist.DeviceListActivity"
            android:exported="true"
            android:theme="@style/Theme.Final_Demo">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.device_filter"
                android:resource="@xml/device_filter" />
        </activity>

        <activity android:name=".pax.PaxActivity"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.Final_Demo">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.device_filter"
                android:resource="@xml/device_filter" />
        </activity>

        <activity android:name=".card_printer.CardPrinterActivity"
            android:exported="true"
            android:theme="@style/Theme.Final_Demo">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.device_filter"
                android:resource="@xml/device_filter" />
        </activity>

        <activity android:name=".thermal_printer.ThermalPrinterActivity"
            android:exported="true"
            android:theme="@style/Theme.Final_Demo">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.device_filter"
                android:resource="@xml/device_filter" />
        </activity>

        <activity android:name=".cash_acceptor.CashAcceptorActivity"
            android:exported="true"
            android:theme="@style/Theme.Final_Demo">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.device_filter"
                android:resource="@xml/device_filter" />
        </activity>
    </application>

</manifest>